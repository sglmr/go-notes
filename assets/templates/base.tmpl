{{define "base"}}
<!doctype html>
<html lang='en'>

<head>
    <meta charset='utf-8'>
    <title>{{template "page:title" .}}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{block "page:meta" .}}{{end}}

    <link rel="stylesheet" href="/static/css/classless.min.css?v={{.Version}}">

</head>

<body>
    <header>
        {{template "partial:nav" .}}
    </header>
    <main>
        {{template "partial:flashMessages" .}}
        {{template "page:main" .}}
    </main>
    <footer>
        <small>
            &copy; {{now | formatTime "2006"}}
            <br>
            Version: {{.Version}}
        </small>
    </footer>
</body>

</html>
{{end}}